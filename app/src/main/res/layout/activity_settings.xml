<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/transparent"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/header_text" />

        <TextView
            style="@style/SettingsHeaderText"
            android:text="@string/settings" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            style="@style/SettingsHorizontalContainer">

            <TextView
                style="@style/SettingsMenuItemText"
                android:text="@string/night_theme" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/shareApp"
            style="@style/SettingsHorizontalContainer">

            <TextView
                style="@style/SettingsMenuItemText"
                android:text="@string/share_app" />

            <ImageView
                style="@style/SettingsMenuItemImage"
                android:contentDescription="@string/share_app"
                android:src="@drawable/ic_share" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/sendSupport"
            style="@style/SettingsHorizontalContainer">

            <TextView
                style="@style/SettingsMenuItemText"
                android:text="@string/write_to_support" />

            <ImageView
                style="@style/SettingsMenuItemImage"
                android:contentDescription="@string/write_to_support"
                android:src="@drawable/ic_support" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/userAgreement"
            style="@style/SettingsHorizontalContainer">

            <TextView
                style="@style/SettingsMenuItemText"
                android:text="@string/agreement" />

            <ImageView
                style="@style/SettingsMenuItemImage"
                android:contentDescription="@string/agreement"
                android:src="@drawable/ic_arrow_forward" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>