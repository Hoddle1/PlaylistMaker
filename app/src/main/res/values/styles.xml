<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/main_text</item>
    </style>


    <style name="SettingsMenuItem" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/settings_text_button</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/settings_icon_hint</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="HeaderText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="TrackName">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/settings_text_button</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackDescription" parent="TrackName">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/track_artist_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NotFoundImage">
        <item name="android:src">@drawable/not_found_light</item>
    </style>

    <style name="NoInternetImage">
        <item name="android:src">@drawable/no_internet_light</item>
    </style>

    <style name="UpdateSearchButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/update_search_btn_background</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/update_search_btn_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">6dp</item>
    </style>
</resources>