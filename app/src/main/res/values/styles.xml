<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/main_text</item>
    </style>


    <style name="SettingsMenuItem" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/settings_text_button</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/settings_icon_hint</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="HeaderText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="TrackName">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/settings_text_button</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackDescription" parent="TrackName">
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/track_artist_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="UpdateSearchButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/default_btn_background</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/default_btn_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">6dp</item>
    </style>

    <style name="ClearHistoryButton" parent="UpdateSearchButton">
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">14dp</item>
    </style>

    <style name="NewPlaylistButton" parent="UpdateSearchButton">
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">14dp</item>
    </style>

    <style name="TrackContentTitle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/track_content_title</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineHeight">15dp</item>
        <item name="android:textSize">@dimen/content_title_text_size</item>
    </style>

    <style name="TrackContentValue">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/track_content_value</item>
        <item name="android:layout_marginTop">@dimen/track_content_vertical_margin</item>
        <item name="android:fontWeight">400</item>
        <item name="android:lineHeight">15dp</item>
        <item name="android:textSize">@dimen/content_title_text_size</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="PlaceholderTextView">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
        <item name="android:textColor">@color/default_placeholder_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineHeight">22dp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="CreatePlaylistBtn">
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/create_playlist_btn_background</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="PlaylistText">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:textColor">@color/playlist_text_color</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToastText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lineHeight">16dp</item>
        <item name="android:textColor">@color/toast_playlist_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PlaylistListItemName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/playlist_list_item_name</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PlaylistListItemCount">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/playlist_list_item_count_tracks</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PlaylistBottomsheetHeader">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/add_to_playlist_bottomsheet_header</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginHorizontal">16sp</item>
        <item name="android:layout_marginBottom">16sp</item>
        <item name="android:paddingVertical">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextInputLayoutPlaylist" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/edittext_box_stroke_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="android:layout_marginTop">16dp</item>

        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="hintTextColor">@color/playlist_edittext_hint</item>
    </style>

    <style name="TextInputEditTextPlaylist" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/playlist_edittext</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CursorOnly" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlActivated">@color/control</item>
    </style>



</resources>